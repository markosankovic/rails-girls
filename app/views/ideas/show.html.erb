<h1>
  <span class="idea-label">Idea:</span> <%= @idea.name %>
</h1>

<p>
  <%= @idea.description %>
</p>

<p>
  <% if @idea.picture.present? %>
  <%= image_tag(@idea.picture_url, :width => 600) if @idea.picture.present? %>
  <% else %>
    This idea has no picture!
  <% end %>
</p>

<div class="row">
  <div class="col-md-6">
    <h3>Comments</h3>
    <% if @comments.size > 0 %>
      <% @comments.each do |comment| %>
        <div class="comment">
          <strong><%= comment.user_name %></strong>
          <br />
          <p><%=comment.body %></p>
          <%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs delete-comment' %>
        </div>
        <hr/>
      <% end %>
    <% else %>
      No comments.
    <% end %>
  </div>
  <div class="col-md-6">
    <h3>Write a comment</h3>
    <%= render 'comments/form' %>
  </div>
</div>

<hr/>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
